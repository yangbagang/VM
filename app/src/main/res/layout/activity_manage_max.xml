<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%">
        <TextView
            android:id="@+id/maxSet_tv_layer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="第一层"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_24"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/maxSet_tv_changeAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="排放数批量设置"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_24"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_view" />
    <ListView
        android:id="@+id/maxSet_lv_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/transparent"
        android:dividerHeight="@dimen/dp_10"
        android:divider="@color/transparent"
        android:scrollbars="none"/>
</com.zhy.android.percent.support.PercentLinearLayout>