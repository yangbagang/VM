                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_21"/>

                <TextView
                    android:id="@+id/paySingle_tv_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="123"
                    android:textSize="@dimen/default_text_21"/>

                <TextView
                    android:id="@+id/paySingle_tv_rail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:textSize="@dimen/default_text_21"/>

                <TextView
                    android:id="@+id/paySingle_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="@dimen/default_text_30"/>
            </LinearLayout>

        </LinearLayout>
        <!--二维码与支付方式-->
        <include layout="@layout/payway_layout"/>

    </LinearLayout>

