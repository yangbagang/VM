<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/ll_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/dp_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/saleDetail_item_tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/default_text_25"/>

        <TextView
            android:id="@+id/saleDetail_item_tv_orderNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/default_text_25"/>

        <TextView
            android:id="@+id/saleDetail_item_tv_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/default_text_25"/>

        <TextView
            android:id="@+id/saleDetail_item_tv_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/default_text_25"/>

        <TextView
            android:id="@+id/saleDetail_item_tv_payWay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/default_text_25"/>

        <TextView
            android:id="@+id/saleDetail_item_tv_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/default_text_25"/>
    </LinearLayout>
</android.support.v7.widget.CardView>