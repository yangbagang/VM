<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="430dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:id="@+id/goods_card_item"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/goods_iv_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/goods_tv_name"
            android:layout_width="240dp"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:text="红牛功能维生素饮料"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_18"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/goods_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:text="¥ 25.0"
                android:textColor="@color/red"
                android:textSize="@dimen/default_text_21"/>

            <TextView
                android:id="@+id/goods_tv_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="right"
                android:text="250ml/瓶"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_18"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="right">

            <ImageView
                android:id="@+id/goods_iv_minus"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/icon_minus"/>

            <TextView
                android:id="@+id/goods_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_21"/>

            <ImageView
                android:id="@+id/goods_iv_add"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/icon_add"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
