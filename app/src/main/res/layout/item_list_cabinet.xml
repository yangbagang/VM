<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1柜-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cabinet_item_tv_no"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="1柜"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_24"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/cabinet_item_ll_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cabinet_item_tv_num"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/default_text_white"
                android:textSize="@dimen/default_text_24"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="门"
                android:textColor="@color/default_text_white"
                android:textSize="@dimen/default_text_24"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="排放量"
                android:textColor="@color/default_text_white"
                android:textSize="@dimen/default_text_24"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cabinet_item_tv_max"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/default_text_white"
                android:textSize="@dimen/default_text_24"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/cabinet_item_tv_delete"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/selector_bt_green"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_22" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_view" />

</LinearLayout>