<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="97%"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_round_green_dark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_50"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_30"
            android:text="支付宝"
            />
        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="@dimen/default_text_25"
            android:text="开启"
            android:background="@drawable/border_switch_on"
            android:layout_marginRight="@dimen/dp_50"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/default_line_view" />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="97%"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_round_green_dark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_50"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_30"
            android:text="微信"
            />
        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="@dimen/default_text_25"
            android:text="开启"
            android:background="@drawable/border_switch_on"
            android:layout_marginRight="@dimen/dp_50"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/default_line_view" />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="97%"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_round_green_dark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_50"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_30"
            android:text="百度钱包"
            />
        <ToggleButton
            android:id="@+id/paySelect_sv_baidu"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/default_text_25"
            android:textOn="开启"
            android:textOff="关闭"
            android:background="@drawable/selector_switch_green"
            android:layout_marginRight="@dimen/dp_50"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/default_line_view" />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="97%"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_round_green_dark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_50"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_30"
            android:text="财付通"
            />
        <ToggleButton
            android:id="@+id/paySelect_sv_QQPay"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/default_text_25"
            android:textOn="开启"
            android:textOff="关闭"
            android:background="@drawable/selector_switch_green"
            android:layout_marginRight="@dimen/dp_50"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>