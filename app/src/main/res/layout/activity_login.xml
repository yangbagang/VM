<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/login_ll_bg"
        android:layout_width="410dp"
        android:layout_height="410dp"
        app:layout_heightPercent="27%"
        app:layout_widthPercent="45%"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/login_iv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/login_tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/login_ll_bg"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="扫二维码登录管理操作"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/login_tv_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_tv_hint"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="设备编号"
        android:textSize="30sp"/>


</com.zhy.android.percent.support.PercentRelativeLayout>