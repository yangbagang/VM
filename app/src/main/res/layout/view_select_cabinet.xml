<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:text="柜编号"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_25"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_view" />
        <GridView
            android:id="@+id/select_gv_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/dp_05"
            android:listSelector="@color/transparent"
            android:numColumns="6"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/dp_05" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:text="柜门数"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_25"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_view" />

        <GridView
            android:id="@+id/select_gv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/dp_05"
            android:listSelector="@color/transparent"
            android:numColumns="5"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/dp_05" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:text="排放量"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_25"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/default_line_view" />
        <GridView
            android:id="@+id/select_gv_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/dp_05"
            android:listSelector="@color/transparent"
            android:numColumns="5"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/dp_05" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/default_line_view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_25"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/select_tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/selector_bt_green"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_25"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/select_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/selector_bt_green"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/default_text_white"
            android:textSize="@dimen/default_text_25"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>